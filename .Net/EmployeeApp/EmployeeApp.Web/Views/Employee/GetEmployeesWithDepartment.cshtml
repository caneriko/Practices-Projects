@using EmployeeApp.Core.ViewModels;
@model List<EmployeeWithDepartment>

@{
    ViewData["Title"] = "All Employees";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Department.Name</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Employee" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                    <a class="btn btn-danger" asp-controller="Employee" asp-action="getbyid" asp-route-id="@item.Id">Go to Profile</a>
                </td>

            </tr>
        }
    </tbody>
</table>

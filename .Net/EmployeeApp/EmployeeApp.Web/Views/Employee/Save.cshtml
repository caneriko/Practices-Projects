 @model EmployeeViewModel 

@{
    ViewData["Title"] = "Save";
}

<h1>Save Employee</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Employee" asp-action="Save" method="post">

            <div class="form-group mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control m-2" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId" asp-items="ViewBag.departments">
                    <option>Departman seçiniz</option>
                </select>
                <span asp-validation-for="DepartmentId"></span>

            </div>
             
            <div class="form-group">
                <input type="submit" value="Save" class="btn-primary m-2" />
            </div>
        </form>
    </div>

</div>


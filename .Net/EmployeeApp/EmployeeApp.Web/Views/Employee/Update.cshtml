@model EmployeeViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Save Product</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Employee" asp-action="Update" method="post">

            <input asp-for="Id" type="hidden" /> 

            <div class="form-group mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control m-2" />
            </div>

            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId" asp-items="ViewBag.departments">
                    <option>Departman seçiniz</option>
                </select>
                <span asp-validation-for="DepartmentId"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn-primary m-2" />
            </div>
        </form>
    </div>

</div>


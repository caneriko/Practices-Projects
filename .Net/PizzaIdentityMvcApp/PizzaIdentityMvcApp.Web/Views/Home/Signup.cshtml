@{
    Layout = null;
}

@model SignUpViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">
    <title>Tiny Dashboard - A Bootstrap Dashboard Template</title>
    <!-- Simple bar CSS -->
    <link rel="stylesheet" href="~/admintemp/css/simplebar.css">
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/admintemp/css/feather.css">
    <!-- Date Range Picker CSS -->
    <link rel="stylesheet" href="~/admintemp/css/daterangepicker.css">
    <!-- App CSS -->
    <link rel="stylesheet" href="~/admintemp/css/app-light.css" id="lightTheme">
    <link rel="stylesheet" href="~/admintemp/css/app-dark.css" id="darkTheme" disabled>
</head>
<body class="light ">
    <div class="wrapper vh-100">
        <div class="row align-items-center h-100">
            <form class="col-lg-6 col-md-8 col-10 mx-auto"   asp-controller="home" asp-action="signup" method="post">
                <div class="mx-auto text-center my-4">
                    <a class="navbar-brand mx-auto mt-2 flex-fill text-center" href="./index.html">
                        <svg version="1.1" id="logo" class="navbar-brand-img brand-md" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 120 120" xml:space="preserve">
                        <g>
                        <polygon class="st0" points="78,105 15,105 24,87 87,87 	" />
                        <polygon class="st0" points="96,69 33,69 42,51 105,51 	" />
                        <polygon class="st0" points="78,33 15,33 24,15 87,15 	" />
                </g>
              </svg>
                    </a>
                    <h2 class="my-3">Kayıt Ol</h2>
                </div>
                <div class="form-row" asp-validation-summary="ModelOnly"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Email"> </label>
                        <input asp-for="Email" id="firstname" class="form-control">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PhoneNumber"> </label>
                        <input asp-for="PhoneNumber" id="lastname" class="form-control">
                        <span asp-validation-for="PhoneNumber"></span>

                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FullName"> </label>
                        <input asp-for="FullName" id="firstname" class="form-control">
                        <span asp-validation-for="FullName"></span>

                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="UserName"> </label>
                        <input asp-for="UserName" id="lastname" class="form-control">
                        <span asp-validation-for="UserName"></span>

                    </div>
                </div>
                <hr class="my-4">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" id="firstname" class="form-control">
                        <span asp-validation-for="Password"></span>

                    </div>
                    <div class="form-group col-md-6">
                        <label for="lastname" asp-for="ConfirmPassword"> </label>
                        <input asp-for="ConfirmPassword" type="password" id="lastname" class="form-control">
                        <span asp-validation-for="ConfirmPassword"></span>

                    </div>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Kayıt Ol</button>
                <p class="mt-5 mb-3 text-muted text-center">© 2023</p>
            </form>
        </div>
    </div>
    <script src="~/admintemp/js/jquery.min.js"></script>
    <script src="~/admintemp/js/popper.min.js"></script>
    <script src="~/admintemp/js/moment.min.js"></script>
    <script src="~/admintemp/js/bootstrap.min.js"></script>
    <script src="~/admintemp/js/simplebar.min.js"></script>
    <script src='~/admintemp/js/daterangepicker.js'></script>
    <script src='~/admintemp/js/jquery.stickOnScroll.js'></script>
    <script src="~/admintemp/js/tinycolor-min.js"></script>
    <script src="~/admintemp/js/config.js"></script>
    <script src="~/admintemp/js/apps.js"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-56159088-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }
        gtag('js', new Date());
        gtag('config', 'UA-56159088-1');
    </script>


        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @await Component.InvokeAsync("NToastNotify")

</body>
</html>

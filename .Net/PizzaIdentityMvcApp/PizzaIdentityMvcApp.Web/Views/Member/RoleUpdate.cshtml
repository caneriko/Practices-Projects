@model RoleUpdateViewModel


<div class="col-12 col-xl-10">
    <div class="row align-items-center my-4">
        <div class="col">
            <h2 class="h3 mb-0 page-title">Rol Güncelle</h2>
        </div>

    </div>
    <form asp-controller="member" asp-action="roleadd" method="post">
        <hr class="my-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Rol Adı</label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>

        </div>

        <hr class="my-4">

        <div class="form-row">
            <div class="col-md-6">
                <div class="custom-control">
                    <span>Rolü kaydetmek için kaydet butonuna tıklayınız</span>
                </div>
            </div>
            <div class="col-md-6 text-right">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </form>
</div> <!-- .col-12 -->
@section Scripts {

    <script src='~/admintemp/js/jquery.dataTables.min.js'></script>
    <script src='~/admintemp/js/dataTables.bootstrap4.min.js'></script>



}


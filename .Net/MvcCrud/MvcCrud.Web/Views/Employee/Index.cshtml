 @model List<Employee> 

     <h1>Employees</h1>

     <table class="table">
         <thead>
             <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Department</th>
            <th>Date Of Birth</th>
            <th></th>
             </tr>
         </thead>
         <tbody>
             @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.Department</td>
                <td>@employee.DateOfBirth.ToShortDateString() </td>
                <td><a asp-controller="Employee" asp-action="View" asp-route-id=@employee.Id class="btn btn-info" > View </a> </td>
            </tr>
        }
         </tbody>

     </table>
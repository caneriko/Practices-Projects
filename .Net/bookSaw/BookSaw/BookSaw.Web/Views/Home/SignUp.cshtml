@{
    ViewData["Title"] = "SignUp";
}

@model SignUpModel


<div class="container">






    <div class="row">
        <div class="col-md-6 offset-3">

            <h3>SignUp</h3>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="btn btn-outline-accent btn-pill">
                    <p class="m-3">  @TempData["SuccessMessage"] </p>
                </div>
            } 

            <div class="btn btn-outline-accent btn-pill" asp-validation-summary="ModelOnly">
            </div>

            <form asp-controller="home" asp-action="signup" method="post">


                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="UserName"></label>
                        <input class="u-full-width" asp-for="UserName" />
                        <span class="label-body" asp-validation-for="UserName"> </span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Email"></label>
                        <input class="u-full-width" asp-for="Email" />
                        <span class="label-body" asp-validation-for="Email"> </span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Phone"></label>
                        <input class="u-full-width" asp-for="Phone" />
                        <span class="label-body" asp-validation-for="Phone"> </span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Password"></label>
                        <input class="u-full-width" asp-for="Password" />
                        <span class="label-body" asp-validation-for="Password"> </span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="PasswordConfirm"></label>
                        <input class="u-full-width" asp-for="PasswordConfirm" />
                        <span class="label-body" asp-validation-for="PasswordConfirm"> </span>
                    </div>
                </div>




                <div class="row col-md-6">
                    <input class="button-primary" type="submit" value="Kayıt Ol">
                </div>


            </form>

        </div>

    </div>

</div>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

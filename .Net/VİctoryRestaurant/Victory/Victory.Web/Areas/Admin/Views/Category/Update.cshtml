@using Victory.Core.ViewModels.Category;
@{
    ViewData["Title"] = "Victory Admin Panel Category Edit";
}

@model UpdateCategoryViewModel

<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Edit Category</h2>

                <form asp-area="admin" asp-controller="category" asp-action="update" method="post" class="tm-signup-form row">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input asp-for="Id"
                           type="hidden"
                           class="form-control validate" />

                    <div class="form-group col-lg-6">
                        <label asp-for="Name"></label>
                        <input asp-for="Name"
                               class="form-control validate" />
                        <span asp-validation-for="Name"></span>

                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="CreatedDate">Created Date</label>
                        <input asp-for="CreatedDate"
                               type="date"
                               disabled style="color:navy;"
                               class="form-control validate" />
                    </div>


                    <div class="form-group col-lg-12">
                        <label class="tm-hide-sm">&nbsp;</label>
                        <button type="submit"
                                class="btn btn-primary btn-block text-uppercase">
                            Update
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

                    }
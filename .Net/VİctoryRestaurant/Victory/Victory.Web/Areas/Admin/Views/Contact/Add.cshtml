@{
    ViewData["Title"] = "Victory Admin Panel Add Contact";
}

@model AddContactViewModel

<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Edit Contact</h2>

                <form asp-area="admin" asp-controller="contact" asp-action="add" method="post" class="tm-signup-form row">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group col-lg-6">

                        <label asp-for="Email"></label>
                        <input id="email"
                               asp-for="Email"
                               type="email"
                               class="form-control validate" />
                        <span asp-validation-for="Email"></span>

                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Name"></label>
                        <input id="email"
                               asp-for="Name"
                               type="text"
                               class="form-control validate" />
                        <span asp-validation-for="Name"></span>

                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber"
                               type="text"
                               class="form-control validate" />
                        <span asp-validation-for="PhoneNumber"></span>

                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Message"></label>
                        <textarea asp-for="Message"
                                  type="text"
                                  class="form-control validate"></textarea>
                        <span asp-validation-for="Message"></span>

                    </div>


                    <div class="form-group col-lg-12">
                        <label class="tm-hide-sm">&nbsp;</label>
                        <button type="submit"
                                class="btn btn-primary btn-block text-uppercase">
                            Update
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

                        }
@{
    ViewData["Title"] = "Victory Admin Panel Contacts";
}

@model List<ContactListViewModel>


<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Contact Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">&nbsp; Tools</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="tm-product-name">@item.Name</td>
                                    <td class="tm-product-name">@item.Email</td>
                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                    <td>
                                        <div class="tm-status-circle @(item.IsActive ? "moving" : "cancelled") ">
                                        </div> @(item.IsActive ? "Not Replied" : "Replied")
                                    </td>
                                    <td>
                                        <a asp-area="admin" asp-controller="contact" asp-action="safedelete" asp-route-id="@item.Id" class="tm-product-delete-link">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </a>
                                        <a asp-area="admin" asp-controller="contact" asp-action="update" asp-route-id="@item.Id" class="tm-product-delete-link"><i class="fas fa-cog"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a asp-area="admin" asp-controller="contact" asp-action="add"
                   class="btn btn-primary btn-block text-uppercase mb-3">Add Contact</a>
            </div>
        </div>

    </div>
</div>


@using Victory.Core.ViewModels.User;




@model UserProfileViewModel





<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">@Model.UserName Profile</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-row">
                    <div class="col-xl-6 col-lg-6 col-md-12">

                        <div class="form-group mb-3">
                            <label asp-for="FirstName">
                                First Name
                            </label>
                            <input id="name"
                                   asp-for="FirstName"
                                   class="form-control validate"
                                   readonly
                                   style="color:navy;"
                                   required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LastName">Last Name</label>
                            <input class="form-control validate"
                                   asp-for="LastName"
                                   readonly
                                   style="color:navy;"
                                   rows="3"
                                   required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Email"></label>
                            <input class="form-control validate"
                                   asp-for="Email"
                                   readonly
                                   style="color:navy;"
                                   rows="3"
                                   required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber">Phone</label>
                            <input class="form-control validate"
                                   asp-for="PhoneNumber"
                                   style="color:navy;"
                                   readonly
                                   rows="3"
                                   required />
                        </div>


                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4 text-center">
                        <div class=" mb-4">
                            <img src="~/images/@Model.PictureUrl" />
                        </div>
                        <a class="btn btn-primary btn-block mx-auto" asp-area="admin" asp-controller="user" asp-action="update">
                            Update Profile
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


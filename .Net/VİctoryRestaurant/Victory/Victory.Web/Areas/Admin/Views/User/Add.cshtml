@using Victory.Core.ViewModels.User;


@model AddUserViewModel

<form asp-area="admin" asp-controller="user" asp-action="add" method="post" class="tm-signup-form row">

    <div class="container mt-5">
        <div class="row tm-content-row">
            <div class="col-12 tm-block-col">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <h2 class="tm-block-title">Add User</h2>


                    <p class="text-white">Roles</p>
                    <select asp-for="RoleId" class="custom-select" asp-items="@(new SelectList(ViewBag.Roles,"Id","Name"))">
                        <option value="">Select Role</option>
                    </select>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row tm-content-row">

            <div class="tm-block-col tm-col-avatar">
                <div class="tm-bg-primary-dark tm-block tm-block-avatar">
                    <h2 class="tm-block-title">Add Avatar</h2>
                    <div class="tm-avatar-container">
                        <img src="~/victoryAdmin/img/avatar.png"
                             alt="Avatar"
                             class="tm-avatar img-fluid mb-4" />
                        <a href="#" class="tm-avatar-delete-link">
                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                        </a>
                    </div>
                    <button class="btn btn-primary btn-block text-uppercase">
                        Upload New Photo
                    </button>
                </div>
            </div>

            <div class="tm-block-col tm-col-account-settings">
                <div class="tm-bg-primary-dark tm-block tm-block-settings row">
                    <div class="row col-12"><h2 class="tm-block-title">User Details</h2></div>
                    
                    <div class="form-group col-lg-6">
                        <label asp-for="FirstName">First Name</label>
                        <input asp-for="FirstName"
                               class="form-control validate" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="LastName">Last Name</label>
                        <input asp-for="LastName"
                               class="form-control validate" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="UserName">User Name</label>
                        <input asp-for="UserName"
                               class="form-control validate" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" type="email"
                               class="form-control validate" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password"
                               type="password"
                               class="form-control validate" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber"
                               class="form-control validate" />
                    </div>

                    <div class="col-12">
                        <button type="submit"
                                class="btn btn-primary btn-block text-uppercase">
                            Add User
                        </button>
                    </div>

                </div>
            </div>

        </div>
    </div>
</form>

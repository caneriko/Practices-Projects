@using Victory.Core.ViewModels;
@{
    ViewData["Title"] = "Victory Admin Panel Reservation Update";
}

@model UpdateReservationViewModel

<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Edit Reservation</h2>

                <form asp-area="admin" asp-controller="reservation" asp-action="update" method="post" class="tm-signup-form row">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group col-lg-6">

                        <label asp-for="FullName"></label>
                        <input asp-for="FullName"
                               class="form-control validate" />
                        <span asp-validation-for="FullName"></span>

                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber"
                               class="form-control validate" />
                        <span asp-validation-for="PhoneNumber"></span>

                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="ReservationDate"></label>
                        <input asp-for="ReservationDate"
                               class="form-control validate" />
                        <span asp-validation-for="ReservationDate"></span>
                    </div>

                    <div class="form-group col-lg-6">
                        <select class="form-control validate" asp-for="NumberOfPersons">
                            <option value="">How many persons?</option>
                            <option value=1>1 Person</option>
                            <option value=2>2 Persons</option>
                            <option value=3>3 Persons</option>
                            <option value=4>4 Persons</option>
                            <option value=5>5 Persons</option>
                            <option value=6>6 Persons</option>
                        </select>
                        <span asp-validation-for="NumberOfPersons"></span>

                    </div>


                    <div class="form-group col-lg-12">
                        <label class="tm-hide-sm">&nbsp;</label>
                        <button type="submit"
                                class="btn btn-primary btn-block text-uppercase">
                           Update Reservation
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>


    @section Scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }

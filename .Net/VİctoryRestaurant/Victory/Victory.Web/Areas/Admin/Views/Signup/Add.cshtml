@{
    ViewData["Title"] = "Victory Admin Panel Sign-Up Add";
}

@model AddSignUpViewModel

<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <h2 class="tm-block-title">Add Subscription</h2>

                <form asp-area="admin" asp-controller="signup" asp-action="add" method="post" class="tm-signup-form row">
                     <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group col-lg-6">
                        <label asp-for="Email"></label>
                        <input id="email"
                               asp-for="Email"
                               type="email"
                               class="form-control validate" />
                    </div>
                    <span asp-validation-for="Email"></span>
                    
                    <div class="form-group col-lg-6">
                        <label class="tm-hide-sm">&nbsp;</label>
                        <button type="submit"
                                class="btn btn-primary btn-block text-uppercase">
                            Save
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    @section Scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }

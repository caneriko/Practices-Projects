@model List<Pizza>




  <!-- card -->
  <div class="container mt-5">
    <div class="row">
        <div class="col-lg-3 mt-4">
            <ul class="list-group">
                <li class="list-group-item">SUCUKLU Pizzalar</li>
                <li class="list-group-item">KARIŞIK Pizzalar</li>
                <li class="list-group-item">KAŞARLI Pizzalar</li>
                <li class="list-group-item">İtalyan Pizzalar</li>
                <li class="list-group-item">SEBZELİ Pizzalar</li>
              </ul>
        </div>
        <div class="col-lg-9">
            <div class="row">

                @foreach (var pizza in Model)
                {
                    <div class="col-lg-4 mt-4">
                        <div class="card" style="width: 18rem;">
                            <img src="~/Html/img/Bolognese.png" class="mx-auto card-img-top img-fluid img-cropped" alt="...">
                            <div class="card-body text-center">
                                <h5 class="card-title">@pizza.Title</h5>
                                <p class="card-text">@pizza.Description</p>
                                <a href="#" class="btn btn-primary">Sepete Ekle <i class="bi bi-basket"></i> </a>
                            </div>
                        </div>
                    </div>
                }

              
                 
            </div>
        </div>
    </div>
  </div>

  <!-- card -->
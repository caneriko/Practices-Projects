@model List<UserViewModel>




<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcılar</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card ">
        <h5 class="card-header"></h5>
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="admin" asp-controller="user" asp-action="add">  Kullanıcı Ekle <i class="bx bx-plus"></i> </a>
            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Soyİsim</th>
                        <th>Rol</th>
                        <th>Email</th>
                        <th>Email Doğrulaması</th>
                        <th>Telefon Numarası</th>
                        <th>Giriş Hata Sayısı</th>
                        <th>İşlemler</th>
                        
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Role</td>
                            <td>@item.Email</td>
                            <td>@(item.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış")</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.AccessFailedCount</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@item.Id" asp-area="admin" asp-controller="user" asp-action="update" asp-route-id="@item.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@item.Id" asp-area="admin" asp-controller="user" asp-action="delete" asp-route-id="@item.Id"><i class="bx bx-minus-circle"></i></a>


                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Soyİsim</th>
                        <th>Rol</th>
                        <th>Email</th>
                        <th>Email Doğrulaması</th>
                        <th>Telefon Numarası</th>
                        <th>Giriş Hata Sayısı</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->




</div>

@section Scripts{
    <script src="~/js/userIndex.js" type="application/ecmascript">

    </script>
       }
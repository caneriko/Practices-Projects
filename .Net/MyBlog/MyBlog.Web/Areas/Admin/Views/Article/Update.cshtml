@model ArticleUpdateViewModel



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale Yöetimi /</span>Makale Ekle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="article" asp-action="update" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label class="form-label">Kategori</label>

                             <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"></select>
                             <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="Title">Başlık</label>
                            <input type="text" asp-for="Title" class="form-control mb-3" id="defaultFormControlInput" placeholder="Başlık Giriniz" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Title" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label class="form-label" asp-for="Content">İçerik</label>
                            <textarea type="text" asp-for="Content" class="form-control mb-3" id="defaultFormControlInput" placeholder="İçerik Yazınız" aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>

                        </div>
                        <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-label d-block" asp-for="Image.FileName">Mevcut Resim</label>
                            <img style="height:25em; width:25em;" class="mb-3" src="~/images/@Model.Image.FileName" alt="@Model.Title" />
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-label" asp-for="Photo">İçerik</label>
                            <input type="file" accept="image/*" asp-for="Photo" class="form-control mb-3" id="defaultFormControlInput" placeholder="Resim Seçiniz" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Photo" class="text-danger"></span>

                        </div>
                        </div>
                    </div>
                    <div class="form-group"> <button type="submit" class="btn btn-primary btn-block">Kaydet</button> </div>
                </form>
            </div>
        </div>
    </div>
</div>
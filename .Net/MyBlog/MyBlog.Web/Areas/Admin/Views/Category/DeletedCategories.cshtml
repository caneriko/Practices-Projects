@model List<CategoryViewModel>




<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Çöp Kutusu /</span> Silinmiş Kategoriler</h4>

    <!-- Basic Bootstrap Table -->
    <div class="card ">
        <h5 class="card-header"></h5>
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="admin" asp-controller="category" asp-action="undodelete">  Kategori Ekle <i class="bx bx-plus"></i> </a>
            <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <td>@item.Name</td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td>@item.CreatedBy</td>
                            <td>@(item.IsDeleted ? "Silinmiş" : "Aktif")</td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@item.Id" asp-area="admin" asp-controller="category" asp-action="undodelete" asp-route-id="@item.Id"><i class="bx bx-undo"></i></a>
                                 


                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->




</div>

@section Scripts{
    <script src="~/js/categoryIndex.js" type="application/ecmascript">

    </script>
       }
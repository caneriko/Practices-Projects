@model CategoryAddViewModel


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kategori Yöetimi /</span>Kategori Ekle</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                <form asp-controller="category" asp-action="add" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly"></div>
                        
                        <div class="form-group">
                            <label class="form-label" asp-for="Name">İsim</label>
                            <input type="text" asp-for="Name" class="form-control mb-3" id="defaultFormControlInput" placeholder="Kategori İsmini Giriniz" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>
                      
                    </div>
                    <div class="form-group"> <button type="submit" class="btn btn-primary btn-block">Kaydet</button> </div>
                </form>
            </div>
        </div>
    </div>
</div>
@model ArticleUpdateViewModel



<div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-8">
        <h2 class="h3 mb-4 page-title">Article Update</h2>
        <div class="my-4">
            <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link" asp-area="admin" asp-controller="article" asp-action="articleProfile" asp-route-id="@Model.Id">Article</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#profile">Update Article</a>
                </li>
            </ul>

            <div class="row mt-5 align-items-center">
                <div class="col-md-3 text-center mb-5">
                    <div class="avatar avatar-xl">
                        <img src="~/images/@Model.PictureUrl" alt="..." width="170px" height="220" />
                    </div>
                </div>
                <div class="col">
                    <div class="row align-items-center">
                        <div class="col-md-7">
                            <h4 class="mb-1">@Model.Title</h4>
                            <p class="small mb-3"><span class="badge badge-dark"></span></p>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-7">
                            <p class="text-muted"> Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris blandit nisl ullamcorper, rutrum metus in, congue lectus. In hac habitasse platea dictumst. Cras urna quam, malesuada vitae risus at, pretium blandit sapien. </p>
                        </div>
                        <div class="col">
                            <p class="small mb-0 text-muted">Nec Urna Suscipit Ltd</p>
                            <p class="small mb-0 text-muted">P.O. Box 464, 5975 Eget Avenue</p>
                            <p class="small mb-0 text-muted">(537) 315-1481</p>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-area="admin" asp-controller="article" asp-action="update" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PictureUrl" />
                <hr class="my-4">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Title">Title</label>
                        <input type="text" asp-for="Title" id="firstname" class="form-control" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label asp-for="Content">Content</label>
                        <textarea asp-for="Content" class="form-control" id="inputEmail4"> </textarea>
                        <span asp-validation-for="Content"></span>
                    </div>
                </div>

                <div class="form-row col-md-6">
                    <label asp-for="Photo">Picture</label>
                    <input type="file" asp-for="Photo" class="form-control-file">
                </div>
                <hr class="my-4">

                <button type="submit" class="btn btn-primary">Update Article</button>

            </form>
        </div> <!-- /.card-body -->
    </div> <!-- /.col-12 -->
</div> <!-- .row -->
@section Scripts{


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
            }
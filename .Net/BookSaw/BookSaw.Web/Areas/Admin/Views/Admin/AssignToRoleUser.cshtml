@model List<AssignRoleToUserModel>


<h1>Role Assign</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Role Assign </h1>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-area="admin" asp-controller="admin" asp-action="AssignToRoleUser" asp-route-id="@ViewBag.userid" method="post">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exists">
                    <label class="form-check-label" for="exampleCheck1">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />
                </div>
            }

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"> Assign </button>

            </div>



        </form>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}